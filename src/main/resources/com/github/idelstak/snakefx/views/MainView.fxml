<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="mainPane" prefHeight="400.0" prefWidth="500.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.idelstak.snakefx.controllers.MainViewController">
   <top>
      <HBox fx:id="topBox" styleClass="top-box">
         <children>
            <StackPane alignment="CENTER_LEFT">
               <children>
                <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#displaySettings" text="Settings" />
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToGameView" text="Back" />
               </children>
            </StackPane>
            <Region maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <StackPane alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exit" text="Exit" />
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveSettings" text="Save" />
               </children>
            </StackPane>
         </children>
      </HBox>
   </top>
</BorderPane>
