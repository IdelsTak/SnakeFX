<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" 
            maxWidth="-Infinity" 
            minHeight="-Infinity" 
            minWidth="-Infinity" 
            prefHeight="400.0" 
            prefWidth="700.0" 
            style="-fx-background-color: #20120F;" 
            xmlns="http://javafx.com/javafx/10.0.2-internal" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.github.idelstak.snakefx.SettingsController">
    
    <AnchorPane layoutX="213.0" 
                layoutY="-2.0" 
                prefHeight="404.0" 
                prefWidth="276.0" 
                style="-fx-background-color: #9C2B27;">
            
        <HBox layoutX="-1.0" 
              layoutY="64.0" 
              prefHeight="85.0" 
              prefWidth="276.0" 
              style="-fx-background-color: #E45652;">
                    
            <Button fx:id="easy" 
                    onAction="#easypush" 
                    prefHeight="85.0" 
                    prefWidth="93.0" 
                    style="-fx-background-color: #E45652;" 
                    text="Easy" 
                    textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button fx:id="medium" 
                    onAction="#mediumpush" 
                    prefHeight="85.0" 
                    prefWidth="93.0" 
                    style="-fx-background-color: #E45752;" 
                    text="Medium" 
                    textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button fx:id="hard" 
                    onAction="#hardpush" 
                    prefHeight="85.0" 
                    prefWidth="93.0" 
                    style="-fx-background-color: #E45652;" 
                    text="Hard" 
                    textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
                   
        </HBox>
        <Label layoutX="58.0" 
               layoutY="14.0" 
               prefHeight="40.0" 
               prefWidth="161.0" 
               text="Game mode " 
               textFill="#fff3dc">
            <font>
                <Font name="System Bold Italic" size="25.0" />
            </font>
        </Label>
        <VBox layoutX="39.0" 
              layoutY="171.0" 
              prefHeight="160.0" 
              prefWidth="100.0" 
              style="-fx-background-color: #E45652;">
                    
            <Label alignment="CENTER" prefHeight="40.0" prefWidth="100.0" text="UP" textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <Label alignment="CENTER" prefHeight="40.0" prefWidth="132.0" text="DOWN" textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <Label alignment="CENTER" prefHeight="40.0" prefWidth="148.0" text="LEFT" textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <Label alignment="CENTER" prefHeight="40.0" prefWidth="151.0" text="RIGHT" textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
                   
        </VBox>
        <VBox layoutX="139.0" 
              layoutY="171.0" 
              prefHeight="160.0" 
              prefWidth="100.0" 
              style="-fx-background-color: #E45652;">
                    
            <Button fx:id="up_stetting" 
                    onKeyPressed="#GetUPKey" 
                    prefHeight="40.0" 
                    prefWidth="120.0" 
                    style="-fx-background-color: #E45752;" 
                    text="W" 
                    textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button fx:id="down_setting"  
                    onKeyPressed="#GetDownKey" 
                    prefHeight="40.0" 
                    prefWidth="130.0" 
                    style="-fx-background-color: #E45752;" 
                    text="S" 
                    textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button fx:id="left_setting"  
                    onKeyPressed="#GetLeftKey" 
                    prefHeight="40.0" 
                    prefWidth="141.0" 
                    style="-fx-background-color: #E45752;" 
                    text="A" 
                    textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button fx:id="right_setting"  
                    onKeyPressed="#GetRightKey" 
                    prefHeight="33.0" 
                    prefWidth="100.0" 
                    style="-fx-background-color: #E45752;" 
                    text="D" 
                    textFill="#f2e8be">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
                   
        </VBox>
        <Button fx:id="return_button" 
                layoutX="19.0" 
                layoutY="349.0" 
                
                onAction="#return_push" 
                prefHeight="39.0" 
                prefWidth="113.0" 
                style="-fx-background-color: #E45752;" 
                text="Return" 
                textFill="#fff3dc">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        <Button fx:id="save" 
                layoutX="139.0" 
                layoutY="349.0" 
                
                onAction="#savepush" 
                prefHeight="39.0" 
                prefWidth="113.0" 
                style="-fx-background-color: #E45752;" 
                text="Save" 
                textFill="#fff3dc">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
           
    </AnchorPane>
   
</AnchorPane>
